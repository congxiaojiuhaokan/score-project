/* city.wxss */
/* 城市选择页面样式 */
.city-container {
  height: 100vh;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

/* 搜索框样式 */
.search-header {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.search-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 内容区域样式 */
.content-wrapper {
  flex: 1;
  display: flex;
  overflow: hidden;
  background-color: #fff;
}

/* 左侧字母导航样式 */
.letter-nav {
  width: 60rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.letter-item {
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #64B5F6;
  margin-bottom: 10rpx;
}

.letter-item:active {
  color: #1989fa;
  font-weight: 600;
}

/* 右侧城市列表样式 */
.city-scroll-view {
  flex: 1;
  overflow-y: auto;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 城市内容样式 */
.city-content {
  padding: 20rpx 0;
}

/* 城市区块样式 */
.city-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
  padding-left: 10rpx;
}

/* 城市列表样式 */
.city-list {
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  padding: 10rpx;
}

.city-item {
  height: auto;
  min-height: 80rpx;
  line-height: 40rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  word-wrap: break-word;
  word-break: break-all;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.city-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.city-item:active {
  background-color: #e0e0e0;
}

/* 当前城市样式 */
.current-city {
  background-color: #e8f4fd;
  color: #1989fa;
}

.city-grid-item.current-city {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e8f4fd;
  color: #1989fa;
  border: 1rpx solid #1989fa;
}

.location-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
  vertical-align: middle;
}

/* 城市网格样式 */
.city-grid {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 10rpx;
  gap: 15rpx;
}

.city-grid-item {
  width: calc(33.33% - 10rpx);
  min-height: 80rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  padding: 20rpx 15rpx;
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  word-wrap: break-word;
  word-break: break-all;
  display: flex;
  align-items: center;
  justify-content: center;
}

.city-grid-item:active {
  background-color: #e0e0e0;
  color: #1989fa;
}

/* 字母标题样式 */
.letter-title {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #666;

  margin: 20rpx 0 10rpx;
}

/* 搜索结果样式 */
.search-result {
  padding: 20rpx 0;
}

.no-result {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
  background-color: #fff;
  border-radius: 8rpx;
}

/* 搜索按钮样式 */
.search-btn {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #1989fa;
  font-weight: 600;
}

/* 搜索框样式 */
.search-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
}

/* 搜索框占位符样式 */
.search-input::placeholder {
  color: #999;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 适配不同屏幕尺寸 */
@media (max-width: 375px) {
  .city-grid-item {
    width: 33.33%;
  }
}

@media (min-width: 768px) {
  .city-grid-item {
    width: 20%;
  }
}