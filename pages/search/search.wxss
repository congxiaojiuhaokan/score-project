/* search.wxss */
.container {
  height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
}

/* 搜索头部样式 */
.search-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 返回按钮样式 */
.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  font-size: 36rpx;
  color: #333;
}

/* 搜索框容器样式 */
.search-input-container {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 0 20rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

/* 搜索输入框样式 */
.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  height: 100%;
  background-color: transparent;
}

/* 占位符样式 */
.placeholder {
  color: #999;
}

/* 搜索按钮样式 */
.search-btn {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search-text {
  font-size: 28rpx;
  color: #1989fa;
  font-weight: 500;
}

/* 历史搜索记录样式 */
.history-section {
  width: 100%;
  flex: 1;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.history-header {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 0 0 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  box-sizing: border-box;
}

.history-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 清除按钮样式 */
.clear-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background-color: #f5f5f5;
}

.clear-icon {
  font-size: 22rpx;
  color: #666;
}

.clear-btn:active {
  opacity: 0.7;
  background-color: #e0e0e0;
}

/* 历史搜索列表样式 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 历史搜索项样式 */
.history-item {
  background-color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid #e0e0e0;
  width: 100%;
  box-sizing: border-box;
  word-wrap: break-word;
  word-break: break-all;
}

.history-text {
  font-size: 26rpx;
  color: #333;
  display: block;
  width: 100%;
  word-wrap: break-word;
  word-break: break-all;
}

/* 无历史记录样式 */
.no-history {
  width: 100%;
  padding: 100rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no-history-text {
  font-size: 26rpx;
  color: #999;
}