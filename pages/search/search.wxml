<view class="container">
  <!-- 搜索头部 -->
  <view class="search-header">
    <!-- 搜索框 -->
    <view class="search-input-container">
      <input 
        class="search-input" 
        placeholder="搜索..." 
        value="{{searchText}}" 
        bindinput="onInputChange" 
        auto-focus="true"
        focus="{{true}}"
        placeholder-class="placeholder"
      />
    </view>
    
    <!-- 搜索按钮 -->
    <view class="search-btn" bindtap="onSearchTap">
      <text class="search-text">搜索</text>
    </view>
  </view>
  
  <!-- 历史搜索记录 -->
  <view class="history-section">
    <view class="history-header">
      <text class="history-title">历史搜索</text>
      <view class="clear-btn" bindtap="onClearHistory">
        <text class="clear-icon">🗑️</text>
      </view>
    </view>
    
    <view class="history-list">
      <view 
        class="history-item" 
        wx:for="{{historyList}}" 
        wx:key="*this" 
        bindtap="onHistoryTap"
        data-text="{{item}}"
      >
        <text class="history-text">{{item}}</text>
      </view>
      
      <!-- 无历史记录时显示 -->
      <view wx:if="{{historyList.length === 0}}" class="no-history">
        <text class="no-history-text">暂无搜索记录</text>
      </view>
    </view>
  </view>
</view>